<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h2>プロフィール編集</h2>
      <%= form_with model:@user, local:true do |f| %>
        <div class="col-md-5">
          <%= f.label :name %>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
        </div>
        
        
        <div class="col-md-5">
          <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><br>
          <%= f.label :profile_image %>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        </div>
        
        <div class="col-md-5" style="margin-top: 10px;">
          <%= f.submit "変更を保存", class: "btn btn-secondary" %>
        </div>
        
      <% end %>
    </div>
  </div>
</div>

